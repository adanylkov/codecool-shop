@{
    ViewData["Title"] = "Checkout";
}
<div class="row">
    <div class="col-2">
        <div class="accordion" id="accordionFilters">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionFilters">
                    <div class="accordion-body">
                        <ul>
                            
                        </ul>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionFilters">
                    <div class="accordion-body">
                        <ul>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="container-fluid">
            <form method="post" >
        <fieldset>
          <legend>Your personal data</legend>
          <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="" />
          </div>
          <div>
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" value="" />
          </div>
          <div>
            <label for="phone">Phone Number:</label>
            <input type="text" id="phone" name="phone" value="" />
          </div>
          <legend>Your billing adress</legend>
          <div>
             <div>
            <label for="yourCountry">Country</label>
            <input type="text" id="yourCountry" value="" name="yourCountry" />
          </div>
          <div>
            <label for="yourCity">City:</label>
            <input type="text" id="yourCity" name="yourCity" value="" />
          </div>
          <div>
            <label for="yourZipcode">Zipcode:</label>
            <input type="text" id="yourZipcode" name="yourZipcode" value="" />
          </div>
          <div>
            <label for="yourAdress">Adress:</label>
            <input type="text" id="yourAdress" name="yourAdress" value="" />
          </div>
          <legend>Your shipping adress</legend>
          <div>
             <div>
            <label for="shippingCountry">Country</label>
            <input type="text" id="shippingCountry" name="shippingCountry" value="" />
          </div>
          <div>
            <label for="shippingCity">City:</label>
            <input type="text" id="shippingCity" name="shippingCity" value="" />
          </div>
          <div>
            <label for="shippingZipcode">Zipcode:</label>
            <input type="text" id="shippingZipcode" name="shippingZipcode" value="" />
          </div>
          <div>
            <label for="shippingAdress">Adress:</label>
            <input type="text" id="shippingAdress" name="shippingAdress" value="" />
          </div>
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit" />
          </div>
        </fieldset>
      </form>
        </div>
    </div>
</div>
